<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/background">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/inputText"
        android:background="@color/inputBackground"
        android:inputType="number"
        android:gravity="center_horizontal"
        android:hint="@string/hint"
        android:ems="10"
        android:id="@+id/editText"
        android:editable="true"
        android:textSize="30dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/equals"
        android:textColor="@color/inputText"
        android:id="@+id/textView"
        android:textSize="32dp"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/spinner2"
        android:layout_centerHorizontal="true"
        android:singleLine="false"
        android:textStyle="normal"
        android:typeface="monospace"
        android:focusableInTouchMode="false" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/inputText"
        android:background="@color/inputBackground"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:hint="@string/hintResult"
        android:ems="10"
        android:id="@+id/editText2"
        android:textSize="30dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:editable="false" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/inputBackground"
        android:spinnerMode="dropdown"
        android:entries="@array/units"
        android:popupBackground="@color/scrollerBackground"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:scrollIndicators="right"
        android:gravity="center_horizontal"
        android:contextClickable="false"
        android:clickable="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/unitOfMeasure"
        android:textAlignment="center"
        android:popupBackground="@color/unitOfMeasureBackground"
        android:gravity="center"
        android:id="@+id/spinner2"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dropdown"
        android:visibility="visible"
        android:clickable="true"
        />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/unitOfMeasure"
        android:textAlignment="center"
        android:popupBackground="@color/unitOfMeasureBackground"
        android:gravity="center"
        android:id="@+id/spinner3"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dropdown"
        android:visibility="visible"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/selectMeasure"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
